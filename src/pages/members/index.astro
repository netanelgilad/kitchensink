---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { isLoggedIn } from "@wix/astro/auth";
import { members } from "@wix/members";

const userIsLoggedIn = isLoggedIn();
let member;
if (userIsLoggedIn) {
  member = (await members.getCurrentMember({
    fieldsets: ['FULL']
  })).member;
}

// Handle URL parameters for success/error messages
const url = new URL(Astro.request.url);
const updated = url.searchParams.get('updated');
const error = url.searchParams.get('error');
---

<BaseLayout
  bodyProps={{
    class:
      "min-h-screen bg-gradient-to-br from-blue-900 via-purple-900 to-pink-900",
  }}
>
  <Fragment slot="head">
    <title>Member Login</title>
    <meta name="description" content="Login to access member features" />
  </Fragment>
  <Fragment slot="body">
    <!-- Success/Error Messages -->
    {updated && (
      <div class="fixed top-4 right-4 z-50 bg-green-500/90 backdrop-blur-sm text-white px-6 py-3 rounded-xl shadow-lg border border-green-400/30 animate-pulse">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Profile updated successfully!
        </div>
      </div>
    )}
    
    {error && (
      <div class="fixed top-4 right-4 z-50 bg-red-500/90 backdrop-blur-sm text-white px-6 py-3 rounded-xl shadow-lg border border-red-400/30 animate-pulse">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          {error === 'update_failed' ? 'Failed to update profile. Please try again.' : 'An error occurred.'}
        </div>
      </div>
    )}

    <div class="flex items-center justify-center min-h-screen p-4">
      <div
        class="bg-white/10 backdrop-blur-lg rounded-3xl shadow-2xl border border-white/20 p-8 w-full max-w-md"
      >
        {userIsLoggedIn ? (
          <!-- Profile Section -->
          <div class="text-center mb-8">
            <div class="relative inline-block mb-6">
              {member?.profile?.photo?.url ? (
                <img
                  src={member.profile.photo.url}
                  alt={member.profile?.nickname || member.contact?.firstName || "User"}
                  class="w-24 h-24 rounded-full border-4 border-white/30 shadow-2xl object-cover"
                />
              ) : (
                <div class="w-24 h-24 rounded-full border-4 border-white/30 shadow-2xl bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                  <svg class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
              )}
              <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-green-400 rounded-full border-3 border-white flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
            
            <h1 class="text-3xl font-bold text-white mb-2">
              Welcome back, {member?.profile?.nickname || member?.contact?.firstName || "Member"}!
            </h1>
            
            {member?.contact?.firstName && member?.contact?.lastName && (
              <p class="text-white/80 text-lg mb-2">
                {member.contact.firstName} {member.contact.lastName}
              </p>
            )}
            
            {member?.loginEmail && (
              <p class="text-white/60 text-sm mb-4 flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {member.loginEmail}
                {member.loginEmailVerified && (
                  <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </p>
            )}
            
            {member?.lastLoginDate && (
              <p class="text-white/50 text-xs">
                Last login: {new Date(member.lastLoginDate).toLocaleDateString()}
              </p>
            )}
          </div>
          
          <!-- Member Stats -->
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-white/5 rounded-xl p-4 text-center backdrop-blur-sm">
              <div class="text-2xl font-bold text-white mb-1">
                {member?.activityStatus === 'ACTIVE' ? 'Active' : member?.activityStatus || 'Unknown'}
              </div>
              <div class="text-white/60 text-sm">Status</div>
            </div>
            <div class="bg-white/5 rounded-xl p-4 text-center backdrop-blur-sm">
              <div class="text-2xl font-bold text-white mb-1">
                {member?._createdDate ? Math.floor((Date.now() - new Date(member._createdDate).getTime()) / (1000 * 60 * 60 * 24)) : '0'}
              </div>
              <div class="text-white/60 text-sm">Days Member</div>
            </div>
                     </div>
           
           <!-- Profile Update Form -->
           <div class="mb-6">
             <div class="flex items-center justify-between mb-4">
               <h2 class="text-xl font-semibold text-white">Update Profile</h2>
               <button 
                 id="toggleForm" 
                 class="text-white/60 hover:text-white transition-colors"
                 onclick="document.getElementById('profileForm').classList.toggle('hidden')"
               >
                 <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                 </svg>
               </button>
             </div>
             
             <form id="profileForm" class="hidden space-y-4" method="POST" action="/api/update-profile">
               <input type="hidden" name="memberId" value={member?._id} />
               
               <!-- Personal Information Section -->
               <div class="bg-white/5 rounded-xl p-4 backdrop-blur-sm">
                 <h3 class="text-lg font-medium text-white mb-3 flex items-center gap-2">
                   <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                   </svg>
                   Personal Information
                 </h3>
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">First Name</label>
                     <input 
                       type="text" 
                       name="firstName" 
                       value={member?.contact?.firstName || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Enter your first name"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Last Name</label>
                     <input 
                       type="text" 
                       name="lastName" 
                       value={member?.contact?.lastName || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Enter your last name"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Nickname</label>
                     <input 
                       type="text" 
                       name="nickname" 
                       value={member?.profile?.nickname || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Your display name"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Profile Title</label>
                     <input 
                       type="text" 
                       name="profileTitle" 
                       value={member?.profile?.title || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Your title or role"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Birthdate</label>
                     <input 
                       type="date" 
                       name="birthdate" 
                       value={member?.contact?.birthdate || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Privacy Status</label>
                     <select 
                       name="privacyStatus" 
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                     >
                       <option value="PUBLIC" selected={member?.privacyStatus === 'PUBLIC'}>Public</option>
                       <option value="PRIVATE" selected={member?.privacyStatus === 'PRIVATE'}>Private</option>
                     </select>
                   </div>
                 </div>
               </div>

               <!-- Professional Information Section -->
               <div class="bg-white/5 rounded-xl p-4 backdrop-blur-sm">
                 <h3 class="text-lg font-medium text-white mb-3 flex items-center gap-2">
                   <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
                   </svg>
                   Professional Information
                 </h3>
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Company</label>
                     <input 
                       type="text" 
                       name="company" 
                       value={member?.contact?.company || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Your company name"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Job Title</label>
                     <input 
                       type="text" 
                       name="jobTitle" 
                       value={member?.contact?.jobTitle || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Your job title"
                     />
                   </div>
                 </div>
               </div>

               <!-- Contact Information Section -->
               <div class="bg-white/5 rounded-xl p-4 backdrop-blur-sm">
                 <h3 class="text-lg font-medium text-white mb-3 flex items-center gap-2">
                   <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                   </svg>
                   Contact Information
                 </h3>
                                   <div class="space-y-4">
                    <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Additional Emails</label>
                     <input 
                       type="text" 
                       name="emails" 
                       value={member?.contact?.emails?.join(', ') || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="email1@example.com, email2@example.com"
                     />
                     <p class="text-white/50 text-xs mt-1">Separate multiple emails with commas</p>
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Phone Numbers</label>
                     <input 
                       type="text" 
                       name="phones" 
                       value={member?.contact?.phones?.join(', ') || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="+1-555-123-4567, +1-555-987-6543"
                     />
                     <p class="text-white/50 text-xs mt-1">Separate multiple phones with commas</p>
                   </div>
                 </div>
               </div>

               <!-- Address Information Section -->
               <div class="bg-white/5 rounded-xl p-4 backdrop-blur-sm">
                 <h3 class="text-lg font-medium text-white mb-3 flex items-center gap-2">
                   <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                   </svg>
                   Address Information
                 </h3>
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                   <div class="md:col-span-2">
                     <label class="block text-white/80 text-sm font-medium mb-2">Street Address</label>
                     <input 
                       type="text" 
                       name="addressLine" 
                       value={member?.contact?.addresses?.[0]?.addressLine || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="123 Main Street"
                     />
                   </div>
                   <div class="md:col-span-2">
                     <label class="block text-white/80 text-sm font-medium mb-2">Address Line 2</label>
                     <input 
                       type="text" 
                       name="addressLine2" 
                       value={member?.contact?.addresses?.[0]?.addressLine2 || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Apt 4B, Suite 100, etc."
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">City</label>
                     <input 
                       type="text" 
                       name="city" 
                       value={member?.contact?.addresses?.[0]?.city || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="New York"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">State/Province</label>
                     <input 
                       type="text" 
                       name="subdivision" 
                       value={member?.contact?.addresses?.[0]?.subdivision || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="NY"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Postal Code</label>
                     <input 
                       type="text" 
                       name="postalCode" 
                       value={member?.contact?.addresses?.[0]?.postalCode || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="10001"
                     />
                   </div>
                   <div>
                     <label class="block text-white/80 text-sm font-medium mb-2">Country</label>
                     <input 
                       type="text" 
                       name="country" 
                       value={member?.contact?.addresses?.[0]?.country || ''}
                       class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="US"
                       maxlength="2"
                     />
                     <p class="text-white/50 text-xs mt-1">2-letter country code (e.g., US, CA, GB)</p>
                   </div>
                 </div>
               </div>

               <!-- Form Actions -->
               <div class="flex gap-3 pt-4">
                 <button 
                   type="submit"
                   class="flex-1 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 hover:shadow-lg"
                 >
                   <span class="flex items-center justify-center gap-2">
                     <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                     </svg>
                     Update Profile
                   </span>
                 </button>
                 <button 
                   type="button"
                   onclick="document.getElementById('profileForm').classList.add('hidden')"
                   class="px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl transition-all duration-200"
                 >
                   Cancel
                 </button>
               </div>
             </form>
           </div>
         ) : (
           <div class="text-center mb-8">
             <h1 class="text-4xl font-bold text-white mb-2">Welcome</h1>
             <p class="text-white/80 text-lg">Sign in to continue</p>
           </div>
         )}

        <div class="space-y-6">
          {
            userIsLoggedIn ? (
              <a
                href="/api/auth/logout"
                class="group relative w-full flex justify-center py-4 px-6 border border-transparent text-lg font-semibold rounded-2xl text-white bg-gradient-to-r from-red-500 via-pink-500 to-orange-500 hover:from-red-600 hover:via-pink-600 hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transform transition-all duration-200 hover:scale-105 hover:shadow-xl"
              >
                <span class="absolute left-0 inset-y-0 flex items-center pl-6">
                  <svg
                    class="h-6 w-6 text-white/80 group-hover:text-white transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                    />
                  </svg>
                </span>
                Sign Out
              </a>
            ) : (
              <a
                href="/api/auth/login?returnToUrl=/members"
                class="group relative w-full flex justify-center py-4 px-6 border border-transparent text-lg font-semibold rounded-2xl text-white bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 hover:from-blue-600 hover:via-purple-600 hover:to-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transform transition-all duration-200 hover:scale-105 hover:shadow-xl"
              >
                <span class="absolute left-0 inset-y-0 flex items-center pl-6">
                  <svg
                    class="h-6 w-6 text-white/80 group-hover:text-white transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                    />
                  </svg>
                </span>
                Sign In
              </a>
            )
          }

          <div class="text-center">
            <p class="text-white/60 text-sm">
              Secure {userIsLoggedIn ? "logout" : "login"} powered by Wix
            </p>
          </div>
        </div>

        <div class="mt-8 pt-6 border-t border-white/20">
          <div class="text-center">
            <p class="text-white/60 text-sm">
              {
                userIsLoggedIn
                  ? "Thanks for being a member! Click above to sign out when you're done."
                  : "Don't have an account? You'll be able to create one after clicking sign in."
              }
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Floating elements for visual appeal -->
    <div
      class="absolute top-20 left-20 w-20 h-20 bg-white/5 rounded-full blur-xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-20 w-32 h-32 bg-purple-500/10 rounded-full blur-2xl animate-pulse delay-700"
    >
    </div>
    <div
      class="absolute top-1/2 left-10 w-16 h-16 bg-pink-500/10 rounded-full blur-xl animate-pulse delay-1000"
    >
    </div>
  </Fragment>
</BaseLayout>
