---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { isLoggedIn } from "@wix/astro/auth";
import { members } from "@wix/members";

const userIsLoggedIn = isLoggedIn();
let member;
if (userIsLoggedIn) {
  member = (await members.getCurrentMember({
    fieldsets: ['FULL']
  })).member;
}
---

<BaseLayout
  bodyProps={{
    class:
      "min-h-screen bg-gradient-to-br from-blue-900 via-purple-900 to-pink-900",
  }}
>
  <Fragment slot="head">
    <title>Member Login</title>
    <meta name="description" content="Login to access member features" />
  </Fragment>
  <Fragment slot="body">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div
        class="bg-white/10 backdrop-blur-lg rounded-3xl shadow-2xl border border-white/20 p-8 w-full max-w-md"
      >
        {userIsLoggedIn ? (
          <!-- Profile Section -->
          <div class="text-center mb-8">
            <div class="relative inline-block mb-6">
              {member?.profile?.photo?.url ? (
                <img
                  src={member.profile.photo.url}
                  alt={member.profile?.nickname || member.contact?.firstName || "User"}
                  class="w-24 h-24 rounded-full border-4 border-white/30 shadow-2xl object-cover"
                />
              ) : (
                <div class="w-24 h-24 rounded-full border-4 border-white/30 shadow-2xl bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                  <svg class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
              )}
              <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-green-400 rounded-full border-3 border-white flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
            
            <h1 class="text-3xl font-bold text-white mb-2">
              Welcome back, {member?.profile?.nickname || member?.contact?.firstName || "Member"}!
            </h1>
            
            {member?.contact?.firstName && member?.contact?.lastName && (
              <p class="text-white/80 text-lg mb-2">
                {member.contact.firstName} {member.contact.lastName}
              </p>
            )}
            
            {member?.loginEmail && (
              <p class="text-white/60 text-sm mb-4 flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {member.loginEmail}
                {member.loginEmailVerified && (
                  <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </p>
            )}
            
            {member?.lastLoginDate && (
              <p class="text-white/50 text-xs">
                Last login: {new Date(member.lastLoginDate).toLocaleDateString()}
              </p>
            )}
          </div>
          
          <!-- Member Stats -->
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-white/5 rounded-xl p-4 text-center backdrop-blur-sm">
              <div class="text-2xl font-bold text-white mb-1">
                {member?.activityStatus === 'ACTIVE' ? 'Active' : member?.activityStatus || 'Unknown'}
              </div>
              <div class="text-white/60 text-sm">Status</div>
            </div>
            <div class="bg-white/5 rounded-xl p-4 text-center backdrop-blur-sm">
              <div class="text-2xl font-bold text-white mb-1">
                {member?._createdDate ? Math.floor((Date.now() - new Date(member._createdDate).getTime()) / (1000 * 60 * 60 * 24)) : '0'}
              </div>
              <div class="text-white/60 text-sm">Days Member</div>
            </div>
          </div>
        ) : (
          <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">Welcome</h1>
            <p class="text-white/80 text-lg">Sign in to continue</p>
          </div>
        )}

        <div class="space-y-6">
          {
            userIsLoggedIn ? (
              <a
                href="/api/auth/logout"
                class="group relative w-full flex justify-center py-4 px-6 border border-transparent text-lg font-semibold rounded-2xl text-white bg-gradient-to-r from-red-500 via-pink-500 to-orange-500 hover:from-red-600 hover:via-pink-600 hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transform transition-all duration-200 hover:scale-105 hover:shadow-xl"
              >
                <span class="absolute left-0 inset-y-0 flex items-center pl-6">
                  <svg
                    class="h-6 w-6 text-white/80 group-hover:text-white transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                    />
                  </svg>
                </span>
                Sign Out
              </a>
            ) : (
              <a
                href="/api/auth/login?returnToUrl=/members"
                class="group relative w-full flex justify-center py-4 px-6 border border-transparent text-lg font-semibold rounded-2xl text-white bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 hover:from-blue-600 hover:via-purple-600 hover:to-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transform transition-all duration-200 hover:scale-105 hover:shadow-xl"
              >
                <span class="absolute left-0 inset-y-0 flex items-center pl-6">
                  <svg
                    class="h-6 w-6 text-white/80 group-hover:text-white transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                    />
                  </svg>
                </span>
                Sign In
              </a>
            )
          }

          <div class="text-center">
            <p class="text-white/60 text-sm">
              Secure {userIsLoggedIn ? "logout" : "login"} powered by Wix
            </p>
          </div>
        </div>

        <div class="mt-8 pt-6 border-t border-white/20">
          <div class="text-center">
            <p class="text-white/60 text-sm">
              {
                userIsLoggedIn
                  ? "Thanks for being a member! Click above to sign out when you're done."
                  : "Don't have an account? You'll be able to create one after clicking sign in."
              }
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Floating elements for visual appeal -->
    <div
      class="absolute top-20 left-20 w-20 h-20 bg-white/5 rounded-full blur-xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-20 w-32 h-32 bg-purple-500/10 rounded-full blur-2xl animate-pulse delay-700"
    >
    </div>
    <div
      class="absolute top-1/2 left-10 w-16 h-16 bg-pink-500/10 rounded-full blur-xl animate-pulse delay-1000"
    >
    </div>
  </Fragment>
</BaseLayout>
